<div class="formContainer">  <form class="form-horizontal userForm" role="form" action="/process?form=userForm" method="POST">      <input type="hidden" name="_csrf" value="{{ csrf }}">      <input type="hidden" name="userID" value="{{authId}}">      <input type="hidden" name="userType" value="{{userType}}" id="buttonValue"/>      <div class="form-group">        <label for="fieldName" class="col-sm-2 control-label">Name</label>        <div class="col-sm-4">          <input type="text" class="form-control" id="fieldName" name="name" value="{{displayName}}">        </div>      </div>      <div class="form-group">          <label for="fieldEmail" class="col-sm-2 control-label">Email</label>          <div class="col-sm-4">            <input type="email" class="form-control" required id="fieldName" name="email" value="{{mail}}">          </div>      </div>      <div class="form-group">          <label for="fieldEmail" class="col-sm-2 control-label">Specialty</label>          <div class="col-sm-4">          <div class="btn-group" data-toggle="buttons-radio">                <button type="button" class="btn btn-primary hacker">Hacker</button>                <button type="button" class="btn btn-primary hustler">Hustler</button>                <button type="button" class="btn btn-primary designer">Designer</button>            </div>        </div>      </div>      <div class="form-group">        <div class="col-sm-offset-2 col-sm-4">          <button type="submit" class="btn btn-default">Register</button>        </div>      </div>   </form></div>{{#section 'jquery'}}  <script>  $(document).ready(function(){      if ($("#buttonValue").val() == "Hustler") {          $(".hustler").addClass("active");      }      if ($("#buttonValue").val() == "Hacker") {          $(".hacker").addClass("active");      }      if ($("#buttonValue").val() == "Designer") {          $(".designer").addClass("active");      }      $(".btn-group button").click(function () {          $(this).addClass("current").siblings().removeClass("active");          $("#buttonValue").val($(this).text());     });    $('.userForm').on('submit', function(evt){        evt.preventDefault();        var action = $(this).attr('action');        var $container = $(this).closest('.Message');        $.ajax({          url: action,          type: 'POST',          data: $('.userForm').serialize(),          success: function(data){            if(data.success){              $container.html('<h2>Thank you!</h2>');            }            else {              $container.html('There was a problem.');            }          },          error: function(){          $container.html('There was a problem.');          }});    });  });  </script>{{/section}}